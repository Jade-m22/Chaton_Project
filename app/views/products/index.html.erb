<div class="hero-banner">
  <%= image_tag "banner.jpg", alt: "Bandeau promotionnel", class: "banner-image" %>
  <div class="banner-overlay">
    <h1>Bienvenue sur Cat’s Eye’s</h1>
    <p>Découvrez nos magnifiques affiches de chats 🐱</p>
  </div>
</div>

<div class="products-container">
  <% @products.each do |product| %>
    <div class="product-card">
      <%= image_tag product.images.first if product.images.attached? %>
      <div class="product-info">
        <p class="title_product"><%= product.name %></p>
        <p>Prix : <%= number_to_currency(product.price, unit: "€") %></p>
        <%= link_to "Voir le produit", product_path(product), class: "btn-show" %>

      </div>
    </div>
  <% end %>
</div>
