<h1>Ajouter un Nouveau Produit</h1>

<%= form_with model: @product, url: products_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nom du produit" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Prix (€)" %>
    <%= f.number_field :price, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Image du produit" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Créer le produit", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Retour à la liste des produits", products_path, class: "btn btn-secondary" %>
