<h1><%= @product.name %></h1>

<% if @product.image.attached? %>
  <%= image_tag @product.image.variant(resize_to_limit: [300, 300]) %>
<% else %>
  <p>Aucune image disponible</p>
<% end %>

<p><strong>Prix :</strong> <%= number_to_currency(@product.price, unit: "â‚¬") %></p>

<p><%= @product.description %></p>

<%= button_to "Ajouter au panier", add_item_cart_path(@product), method: :post, class: "btn btn-primary" %>

<%= link_to "Modifier ce produit", edit_product_path(@product), class: "btn btn-warning" %>


