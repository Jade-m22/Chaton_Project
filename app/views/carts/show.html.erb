<div class="cart-container">
  <h1 class="cart-title">üõç Votre Panier</h1>

  <% if @cart.cart_items.empty? %>
    <div class="alert-empty">Votre panier est vide.</div>
    <div class="cart-actions">
      <%= link_to "üõçÔ∏è Continuer vos achats", products_path, class: "btn-continue" %>
    </div>
  <% else %>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Produit</th>
          <th></th>
          <th>Prix</th>
          <th>Quantit√©</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% total_price = 0 %>
        <% @cart.cart_items.each do |cart_item| %>
          <% product = cart_item.product %>
          <% item_total = product.price * cart_item.quantity %>
          <% total_price += item_total %>
          <tr>
            <td><%= product.name %></td>
            <td><%= number_to_currency(product.price, unit: "‚Ç¨") %></td>
            <td>
              <%= form_with url: update_quantity_cart_path(cart_item), method: :patch, local: true, class: "quantity-form" do |form| %>
                <%= form.number_field :quantity, value: cart_item.quantity, min: 1, class: "quantity-input", onchange: "this.form.submit()" %>
              <% end %>
            </td>
            <td><%= number_to_currency(item_total, unit: "‚Ç¨") %></td>
            <td>
              <%= button_to "‚úï", remove_item_cart_path(cart_item.id), method: :delete, class: "btn-delete", data: { confirm: "Voulez-vous vraiment supprimer cet article ?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="cart-total">
      <span>Total :</span>
      <span class="total-price"><%= number_to_currency(total_price, unit: "‚Ç¨") %></span>
    </div>

    <div class="cart-actions">
      <%= form_with url: orders_path, method: :post, local: true do |f| %>
        <%= f.submit "Passer la commande", class: "btn-order", data: { turbo: false } %>
      <% end %>
      <%= link_to "üõçÔ∏è Continuer vos achats", products_path, class: "btn-continue" %>
    </div>
  <% end %> 
</div>
