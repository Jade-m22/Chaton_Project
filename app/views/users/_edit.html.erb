<div class="form-container">
  <h1 class="form-title">Modifier mon profil</h1>

  <%= form_for @user do |f| %>
    <div class="input-group">
      <%= f.label :email, class: "input-label" %>
      <%= f.email_field :email, placeholder: "Entrez votre email", required: true, class: "input-field" %>
    </div>

    <div class="input-group">
      <%= f.label :password, class: "input-label" %>
      <%= f.password_field :password, placeholder: "(Laisser vide pour ne pas modifier)", class: "input-field" %>
    </div>

    <div class="input-group">
      <%= f.label :password_confirmation, class: "input-label" %>
      <%= f.password_field :password_confirmation, placeholder: "(Laisser vide pour ne pas modifier)", class: "input-field" %>
    </div>

    <div class="input-group">
      <%= f.submit "Mettre à jour", class: "btn-submit" %>
    </div>
  <% end %>

  <div class="danger-zone">
    <%= form_for @user, url: user_registration_path, method: :delete do %>
      <%= submit_tag "Supprimer mon compte", class: "btn-delete", data: { confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible." } %>
    <% end %>
  </div>

  <a href="<%= root_path %>" class="back-link">← Retour à l'accueil</a>
</div>
