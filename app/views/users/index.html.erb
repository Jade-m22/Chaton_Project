<h1>Liste des utilisateurs</h1>
<table>
  <tr>
    <th>Email</th>
    <th>Admin</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.admin? ? "Oui" : "Non" %></td>
      <td>
        <%= link_to "Voir", user_path(user) %> |
        <%= link_to "Modifier", edit_user_path(user) %> |
        <% if current_user.admin? %>
          <%= link_to "Supprimer", user_path(user), method: :delete, data: { confirm: "ÃŠtes-vous sÃ»r ?" } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
